<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://accountDetailView.title"
      focusComponent="form">
    <data>
        <instance id="accountDc"
                  class="com.company.smartbudget.entity.Account">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="accountDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="accountDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="currencyField" property="currency"/>
            <textField id="balanceField" property="balance"/>
        </formLayout>
        <hbox id="detailActions">
            <button text="Ок" id="saveAndCloseButton" action="saveAction"/>
            <button text="Отмена" id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
