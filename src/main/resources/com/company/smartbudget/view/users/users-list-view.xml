<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://usersListView.title"
      focusComponent="usersesDataGrid">
    <data>
        <collection id="usersesDc"
                    class="com.company.smartbudget.entity.Users">
            <fetchPlan extends="_base"/>
            <loader id="usersesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Users e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>

        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="usersesDataGrid.createAction" text="Создать"/>
            <button id="editButton" action="usersesDataGrid.editAction" text="Редактировать"/>
            <button id="removeButton" action="usersesDataGrid.removeAction" text="Удалить"/>
            <simplePagination id="pagination" dataLoader="usersesDl"/>
        </hbox>
        <dataGrid id="usersesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="usersesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="email"/>
                <column property="password"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
