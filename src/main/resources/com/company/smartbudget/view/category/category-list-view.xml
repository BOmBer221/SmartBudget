<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://categoryListView.title"
      focusComponent="categoriesDataGrid">
    <data>
        <collection id="categoriesDc"
                    class="com.company.smartbudget.entity.Category">
            <fetchPlan extends="_base"/>
            <loader id="categoriesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Category e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button text="Создать" id="createButton" action="categoriesDataGrid.createAction"/>
            <button text="Редактировать" id="editButton" action="categoriesDataGrid.editAction"/>
            <button text="Удалить" id="removeButton" action="categoriesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="categoriesDl"/>
        </hbox>
        <dataGrid id="categoriesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="categoriesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
