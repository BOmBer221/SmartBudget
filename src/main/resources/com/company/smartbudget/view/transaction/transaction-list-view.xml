<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://transactionListView.title"
      focusComponent="transactionsDataGrid">
    <data>
        <collection id="transactionsDc"
                    class="com.company.smartbudget.entity.Transaction">
            <fetchPlan extends="_base">
                <property name="user_id" fetchPlan="_instance_name"/>
                <property name="catedory_id" fetchPlan="_instance_name"/>
                <property name="target_id" fetchPlan="_instance_name"/>
                <property name="account_id" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="transactionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Transaction_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="transactionsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="transactionsDataGrid.createAction"/>
            <button id="editButton" action="transactionsDataGrid.editAction"/>
            <button id="removeButton" action="transactionsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="transactionsDl"/>
        </hbox>
        <dataGrid id="transactionsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="transactionsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="user_id"/>
                <column property="catedory_id"/>
                <column property="target_id"/>
                <column property="account_id"/>
                <column property="type"/>
                <column property="ammount"/>
                <column property="description"/>
                <column property="date"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
