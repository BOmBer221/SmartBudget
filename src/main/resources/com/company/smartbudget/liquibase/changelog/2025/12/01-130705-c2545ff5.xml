<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="SmartBudget">
        <addColumn tableName="TRANSACTION_">
            <column name="CATEGORY_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="SmartBudget">
        <addColumn tableName="CATEGORY">
            <column name="USER_ID_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="SmartBudget">
        <createIndex indexName="IDX_CATEGORY_USER_ID" tableName="CATEGORY">
            <column name="USER_ID_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID_ID" baseTableName="CATEGORY"
                                 constraintName="FK_CATEGORY_ON_USER_ID" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="4" author="SmartBudget">
        <createIndex indexName="IDX_TRANSACTION__CATEGORY" tableName="TRANSACTION_">
            <column name="CATEGORY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID" baseTableName="TRANSACTION_"
                                 constraintName="FK_TRANSACTION__ON_CATEGORY" referencedColumnNames="ID"
                                 referencedTableName="CATEGORY"/>
    </changeSet>
</databaseChangeLog>