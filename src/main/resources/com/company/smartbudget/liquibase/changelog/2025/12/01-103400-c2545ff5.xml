<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="SmartBudget">
        <dropForeignKeyConstraint baseTableName="recommendation" constraintName="fk_recommendation_on_user_id"/>
    </changeSet>
    <changeSet id="2" author="SmartBudget">
        <dropForeignKeyConstraint baseTableName="target" constraintName="fk_target_on_user_id"/>
    </changeSet>
    <changeSet id="3" author="SmartBudget">
        <dropForeignKeyConstraint baseTableName="transaction_" constraintName="fk_transaction__on_user_id"/>
    </changeSet>
    <changeSet id="4" author="SmartBudget">
        <addColumn tableName="TRANSACTION_">
            <column name="CATEGORY_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="SmartBudget">
        <addColumn tableName="ACCOUNT">
            <column name="USERS_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="6" author="SmartBudget">
        <createIndex indexName="IDX_ACCOUNT_USERS" tableName="ACCOUNT">
            <column name="USERS_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USERS_ID" baseTableName="ACCOUNT" constraintName="FK_ACCOUNT_ON_USERS"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="7" author="SmartBudget">
        <createIndex indexName="IDX_TRANSACTION__CATEGORY" tableName="TRANSACTION_">
            <column name="CATEGORY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID" baseTableName="TRANSACTION_"
                                 constraintName="FK_TRANSACTION__ON_CATEGORY" referencedColumnNames="ID"
                                 referencedTableName="CATEGORY"/>
    </changeSet>
    <changeSet id="8" author="SmartBudget">
        <createIndex indexName="IDX_TRANSACTION__TARGET_ID" tableName="TRANSACTION_">
            <column name="TARGET_ID_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="9" author="SmartBudget">
        <addForeignKeyConstraint baseColumnNames="USER_ID_ID" baseTableName="RECOMMENDATION"
                                 constraintName="FK_RECOMMENDATION_ON_USER_ID" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="10" author="SmartBudget">
        <addForeignKeyConstraint baseColumnNames="USER_ID_ID" baseTableName="TARGET"
                                 constraintName="FK_TARGET_ON_USER_ID" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="11" author="SmartBudget">
        <addForeignKeyConstraint baseColumnNames="USER_ID_ID" baseTableName="TRANSACTION_"
                                 constraintName="FK_TRANSACTION__ON_USER_ID" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="12" author="SmartBudget">
        <dropColumn columnName="account_id" tableName="users"/>
    </changeSet>
    <changeSet id="13" author="SmartBudget">
        <dropColumn columnName="catedory_id_id" tableName="transaction_"/>
    </changeSet>
</databaseChangeLog>